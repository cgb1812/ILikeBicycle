<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bilibili.manage.mapper.UserForumMapper">
	<select id="findUserForum"
		resultType="com.bilibili.manage.pojo.Forum">
		select forumID,forumBT,forumType,forumAmount,createdTime,modifiedTime from
		forum
		order by forumID asc
		limit #{startIndex},#{pageSize}
		</select>
		
		<select id="getRowCount" resultType="int">
			select count(*) from forum
		</select>
		 
		<select id="findByForumID"
			resultType="com.bb.sys.entity.Forum">
			select forumBT,forumMessage,forumType,forumAmount,forumAvatar,createdTime,createdUser
			from forum where forumID=#{forumID}
			</select> 
</mapper>