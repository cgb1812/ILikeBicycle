<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bilibili.manage.mapper.HotMapper">
	<select id="findHotForum"
		resultType="com.bilibili.manage.pojo.Forum">
		select forumID,forumBT,forumType,forumAmount,createdTime,createdUser from
		forum
		order by forumID desc
		limit #{startIndex},#{pageSize}
		</select>
		
		<select id="getRowCount" resultType="int">
			select count(*) from forum
		</select>
		
</mapper>