<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bb.sys.dao.PostReplyDao">
	<insert id="postReply"
	parameterType="com.bb.sys.entity.ForumReply">
		insert into
		forumreply(replyID,replyAvatar,replyContent,replyTime,replyportID,replyName,modifiedTime)
		values(null,#{replyAvatar},#{replyContent},now(),#{replyportID},#{replyName},now())
	</insert>
	
	<select id="doFindByForumID"
			resultType="com.bb.sys.entity.Forum">
		select forumBT,forumType,createdUser,createdTime,forumMessage from forum where forumID=#{forumID}
	</select>

	<select id="doFindReplyById"
		resultType="com.bb.sys.entity.ForumReply">
		select replyID,replyAvatar,replyContent,replyTime,replyName from forumreply where replyportID=#{replyportID}
		</select>
</mapper>