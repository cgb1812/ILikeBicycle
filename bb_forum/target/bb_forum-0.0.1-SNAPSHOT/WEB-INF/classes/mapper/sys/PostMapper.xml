<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bb.sys.dao.PostDao">
	<insert id="postForum"
	parameterType="com.bb.sys.entity.Forum">
		insert into
		forum(forumID,forumBT,forumMessage,forumType,forumAmount,forumAvatar,
		createdUser,modifiedUser,createdTime,modifiedTime)
		values(null,#{forumBT},#{forumMessage},#{forumType},#{forumAmount},#{forumAvatar},#{createdUser},
		#{modifiedUser},now(),now())
	</insert>
		
</mapper>